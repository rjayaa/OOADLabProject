package main;

import java.util.Scanner;

import model.KumpulanTugas;
import model.Tugas;

public class Main {
	
	Scanner sc = new Scanner(System.in);
	KumpulanTugas kt = new KumpulanTugas();
			
	
	String input;
	public Main() {
		System.out.println("1. Tambah Tugas");
		System.out.println("2. Tampilkan semua Tugas");
		System.out.println("3. Lanjutkan Tugas");
		System.out.println("4. Exit");
		
		input = sc.nextLine();
		switch(input) {
		case "1":
			tambahTugas();
			break;
		case "2":
			kt.tampilkanSemuaTugas();
			break;
		}
	}
	private void tampilkanTugas() {
		// TODO Auto-generated method stub
		
	}
	private void tambahTugas() {
		// TODO Auto-generated method stub
		System.out.println("Input nama tugas :");
		String nama = sc.nextLine();
		
		kt.tambahTugas(new Tugas(nama));
		
	}
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		new Main();
	}

}
